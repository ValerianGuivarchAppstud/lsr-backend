{
  "name": "appstud-swag-backend-node",
  "version": "1.0.0",
  "description": "Backend for Swag app",
  "license": "UNLICENSED",
  "author": "Appstud",
  "main": "start.js",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "checkdeps": "ncu",
    "checkdeps:apply": "ncu -u",
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "compile": "tsc --build",
    "format": "prettier --config .prettierrc.json --write src/**/*.ts",
    "formatconfig": "prettier-package-json --write package.json .eslintrc.json .ncurc.json .prettierrc.json",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('npm') === -1) throw new Error('You must use npm to install')\"",
    "lint": "eslint --max-warnings 30 --ext .ts src/**",
    "sonar": "node sonarqube.analysis.js",
    "sonar:withtests": "npm run test && node sonarqube.analysis.js",
    "start:local": "NODE_ENV=local ts-node src/main/start.ts",
    "start:prod": "node dist/main/start.js",
    "test": "jest --no-cache --forceExit --coverage --testResultsProcessor=jest-sonar-reporter"
  },
  "dependencies": {
    "ajv": "^8.10.0",
    "axios": "^0.26.1",
    "bcrypt": "^5.0.1",
    "dayjs": "^1.10.8",
    "dotenv": "^16.0.0",
    "fastify": "^3.27.4",
    "fastify-cors": "^6.0.3",
    "fastify-multipart": "^5.3.1",
    "fastify-plugin": "^3.0.1",
    "fastify-swagger": "^5.0.0",
    "fluent-json-schema": "^3.1.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.5",
    "mongoose-paginate-v2": "^1.6.3",
    "pino": "^7.8.1",
    "pino-pretty": "^7.5.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/chance": "^1.1.3",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongoose-paginate-v2": "^1.4.3",
    "@types/node": "^17.0.21",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "chance": "^1.1.8",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^12.3.5",
    "nodemon": "^2.0.15",
    "npm-check-updates": "^12.5.2",
    "prettier": "^2.5.1",
    "prettier-package-json": "^2.6.3",
    "sonarqube-scanner": "^2.8.1",
    "testcontainers": "^8.4.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=16.14 <17",
    "npm": ">=8 <9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jestSonar": {
    "sonar56x": true,
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --fix",
    "*.ts": "prettier --config .prettierrc.json --write src/**/*.ts",
    "package.json": [
      "prettier-package-json --write package.json .eslintrc.json .ncurc.json .prettierrc.json",
      "git add"
    ]
  }
}
